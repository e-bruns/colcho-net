

<h1><%= t '.title' %></h1>

<%= form_tag user_sessions_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    
  </p>
  <p>
    <%= submit_tag t('user_sessions.login') %>
  </p>
<% end %>

<p><%= t '.sign_up_text' %> <%= link_to t('.sign_up'), new_user_path %></p>
